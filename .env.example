# PyRogue 環境変数設定例
# このファイルを .env にコピーして設定を変更してください

# デバッグモード (true/false)
DEBUG=false

# ログレベル (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# セーブファイルディレクトリ
SAVE_DIRECTORY=saves

# ゲームウィンドウ設定
WINDOW_WIDTH=80
WINDOW_HEIGHT=50

# FPS制限 (0で無制限)
FPS_LIMIT=60

# オートセーブ機能 (true/false)
AUTO_SAVE_ENABLED=true

# 音声機能 (true/false) - 将来の拡張用
SOUND_ENABLED=false
